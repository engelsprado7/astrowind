  <Hero
    actions={[
      {
        variant: Variant.Primary,
        text: 'Actívalo ahora',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
      },
      { text: 'Descubre si eres candidato', href: '#features' },
